<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewAdapterVenda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAdapterNomeClienteVenda"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="Nome Cliente"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewValorTotal"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:text="Valor Total" />

            <TextView
                android:id="@+id/textAdapterValorTotalVenda"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="left"
                android:text="valor"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textAdapterFormaPagamentoVenda"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:text="Forma Pagamento: CrÃ©dito"
                android:textColor="#696969"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Data" />

            <TextView
                android:id="@+id/textAdapterDataVenda"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="20/10/2018"
                android:textColor="#696969" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>